<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>panel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>panel</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- turn-bank -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/turn/turn-ger.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m> 0.00 </y-m>
      <z-m>  -0.015 </z-m>
    </offsets>
  </model>

  <!-- Mach -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/um-1/um-cp.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m> -0.086 </y-m>
      <z-m>  0.120 </z-m>
    </offsets>
  </model>

  <!-- AI -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/ai/ai.xml</path>
    <offsets>
      <x-m> 0.005 </x-m>
      <y-m>  0.004 </y-m>
      <z-m>  0.055 </z-m>
    </offsets>
  </model>

  <!-- VSI -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/vsi/vsi.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.086 </y-m>
      <z-m> -0.015 </z-m>
    </offsets>
  </model>

    <!-- stab indicator -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/stabind/stabind.xml</path>
    <offsets>
      <x-m> -0.003 </x-m>
      <y-m> -0.216 </y-m>
      <z-m> -0.015 </z-m>
    </offsets>
  </model>

  <!-- FLAPS -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/flaps/flaps.xml</path>
    <offsets>
      <x-m>  -0.010 </x-m>
      <y-m> -0.216 </y-m>
      <z-m> 0.055 </z-m>
    </offsets>
  </model>

  <!-- ASI METRIC -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/asi-metric/asi-metric.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.086 </y-m>
      <z-m> 0.115 </z-m>
    </offsets>
  </model>

  <!-- RPM -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/rpm/rpm.xml</path>
    <offsets>
      <x-m>  -0.005 </x-m>
      <y-m> 0.230 </y-m>
      <z-m> -0.019 </z-m>
    </offsets>
  </model>

  <!-- ALT METRIC -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/vm-20/vm20.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m> -0.086 </y-m>
      <z-m> -0.015 </z-m>
    </offsets>
  </model>

  <!-- Horizontal Stab Indicator -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/hi/hi.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.134 </z-m>
    </offsets>
  </model>

  <!-- EGT -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/egt/egt.xml</path>
    <offsets>
      <x-m>  -0.015 </x-m>
      <y-m>  0.230 </y-m>
      <z-m> -0.095 </z-m>
    </offsets>
  </model>


  <!-- REVI -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/revi/revi.xml</path>
    <offsets>
      <x-m> -0.010 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.249 </z-m>
    </offsets>
  </model>

  <!-- LANDING LIGHT -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/buttons/land-light.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.066 </z-m>
      <pitch-deg> -20 </pitch-deg>
    </offsets>
  </model>

  <!-- THROTTLE -->
  <model>
    <path>Aircraft/Yak-15/Models/Panels/Instruments/throttle/throttle.xml</path>
    <offsets>
      <x-m>  0.122 </x-m>
      <y-m> -0.312 </y-m>
      <z-m> -0.16 </z-m>
    </offsets>
  </model>

</PropertyList>
